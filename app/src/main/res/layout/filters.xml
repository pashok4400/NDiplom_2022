<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:chipSpacingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/european"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="European"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/asian"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asian" />

        <com.google.android.material.chip.Chip
            android:id="@+id/panAsian"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pan Asian" />

        <com.google.android.material.chip.Chip
            android:id="@+id/oriental"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oriental" />

        <com.google.android.material.chip.Chip
            android:id="@+id/american"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="American" />

        <com.google.android.material.chip.Chip
            android:id="@+id/russian"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Russian" />

        <com.google.android.material.chip.Chip
            android:id="@+id/mediterranean"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mediterranean" />

    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>